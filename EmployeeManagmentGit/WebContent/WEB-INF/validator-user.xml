<!DOCTYPE form-validation PUBLIC
        "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.3.0//EN"
        "http://jakarta.apache.org/commons/dtds/validator_1_3_0.dtd">

<form-validation>
   <formset>
      <form name="registrationForm">
      
         <field property="emp_name" depends="required">
		 	<msg name="required" key="err.user.Emp_name.required" />
		 </field>
		
		<field property="designation" depends="required">
		 	<msg name="required" key="err.user.Designation.required" />
		 </field>
		
		<field property="date_of_birth" depends="required">
		 	<msg name="required" key="err.user.Date_of_birth.required" />
		 </field>
		
		<field property="gender" depends="required">
		 	<msg name="required" key="err.user.Gender.required" />
		 </field>
		
		<field property="fathers_name" depends="required">
		 	<msg name="required" key="err.user.Fathers_name.required" />
		 </field>
		
		<field property="personal_mail_id" depends="required,invalid">
		 	<msg name="required" key="err.user.Personal_mail_id.required" />
		 	<msg name="email" key="err.user.Personal_mail_id.invalid"/>
		 </field>
		
		<field property="permanent_address" depends="required">
		 	<msg name="required" key="err.user.Permanent_address.required" />
		 </field>
		
		<field property="local_address" depends="required">
		 	<msg name="required" key="err.user.Local_address.required" />
		 </field>
		
		<field property="contact_no" depends="required">
		 	<msg name="required" key="err.user.Contact_no.required" />
		 </field>
		
		<field property="highest_qualification" depends="required">
		 	<msg name="required" key="err.user.Highest_qualification.required" />
		 </field>
		
		<field property="year_of_Experience" depends="required">
		 	<msg name="required" key="err.user.Year_of_Experience.required" />
		 </field>
		
		<field property="date_of_registration" depends="required">
		 	<msg name="required" key="err.user.Date_of_registration.required" />
		 </field>
		
		<field property="salary_at_the_time_of_joining" depends="required">
		 	<msg name="required" key="err.user.Salary_at_the_time_of_joining.required" />
		 </field>
		
		<field property="employee_personal_bank_name" depends="required">
		 	<msg name="required" key="err.user.Employee_personal_bank_name.required" />
		 </field>
		
		<field property="personal_bank_account_no" depends="required">
		 	<msg name="required" key="err.user.Personal_bank_account_no.required" />
		 </field>
		
		<field property="bank_address" depends="required">
		 	<msg name="required" key="err.user.Bank_address.required" />
		 </field>
		
		<field property="iFSC_code" depends="required">
		 	<msg name="required" key="err.user.IFSC_code.required" />
		 </field>
		
        </form>
        <form name="recruitmentForm">
      
         <field property="applicant" depends="required">
		 	<msg name="required" key="err.user.Applicant.required" />
		 </field>
		 
		  <field property="scheduled_date" depends="required">
		 	<msg name="required" key="err.user.Scheduled_date.required" />
		 </field>
		 
		  <field property="interview_time" depends="required">
		 	<msg name="required" key="err.user.Interview_time.required" />
		 </field>
		 
		  <field property="venue" depends="required">
		 	<msg name="required" key="err.user.Venue.required" />
		 </field>
		 
		 </form>
		 
		  <form name="loginForm">
      
         <field property="type" depends="required">
		 	<msg name="required" key="err.user.Type.required" />
		 </field>
		 
		  <field property="username" depends="required">
		 	<msg name="required" key="err.user.Username.required" />
		 </field>
		 
		  <field property="password" depends="required">
		 	<msg name="required" key="err.user.Password.required" />
		 </field>
		 
		 
		 </form>
		   <form name="assetForm">
      
         <field property="employee_id" depends="required">
		 	<msg name="required" key="err.user.Employee_id.required" />
		 </field>
		 
		  <field property="rent" depends="required">
		 	<msg name="required" key="err.user.Rent.required" />
		 </field>
		 
		  <field property="date_to_given" depends="required">
		 	<msg name="required" key="err.user.Date_to_given.required" />
		 </field>
		 
		  <field property="configuration" depends="required">
		 	<msg name="required" key="err.user.Configuration.required" />
		 </field>
		 
		  <field property="laptop_received_by_employee" depends="required">
		 	<msg name="required" key="err.user.Laptop_received_by_employee.required" />
		 </field>
		
		 </form>
		 
		 
		  <form name="attendanceForm">
		      
		         <field property="emp_id" depends="required">
				 	<msg name="required" key="err.user.Employee_id.required" />
				 </field>
				 
				  <field property="total_working_days" depends="required">
				 	<msg name="required" key="err.user.Total_working_days.required" />
				 </field>
				 
				  <field property="total_present_days" depends="required">
				 	<msg name="required" key="err.user.Total_present_days.required" />
				 </field>
				 
				  <field property="total_billing_days" depends="required">
				 	<msg name="required" key="err.user.Total_billing_days.required" />
				 </field>
				 
				  <field property="leaves_taken" depends="required">
				 	<msg name="required" key="err.user.Leaves_taken.required" />
				 </field>
				 
				 <field property="leave_type" depends="required">
				 	<msg name="required" key="err.user.Leave_type.required" />
				 </field>
				 
		
		 
		 </form>
		 
  </formset>
</form-validation>